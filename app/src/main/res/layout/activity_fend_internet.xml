<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fEnd_Internet"
    android:background="@color/grey">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INTERNET"
            android:textSize="23sp"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="110dp">

        <TextView
            android:id="@+id/topics1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How does the internet works?"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="150dp">

        <TextView
            android:id="@+id/topics2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What is HTTP?"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="190dp">

        <TextView
            android:id="@+id/topics3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Browsers and how they work?"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="230dp">

        <TextView
            android:id="@+id/topics4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DNS and how it works?"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="270dp">

        <TextView
            android:id="@+id/topics5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What is Domain Name?"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="310dp">

        <TextView
            android:id="@+id/topics6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What is hosting?"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="380dp">

        <TextView
            android:id="@+id/knowledgeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KNOWLEDGE"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="420dp">

        <TextView
            android:id="@+id/internetKnowledgeInt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="460dp">

        <SeekBar
            android:id="@+id/internet_knowledge"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:min="0"
            android:max="10"
            android:progress="0"
            android:layout_marginTop="20dp"
            android:thumbTint="@color/blue"
            android:layout_centerHorizontal="true"/>/>
    </RelativeLayout>

</RelativeLayout>